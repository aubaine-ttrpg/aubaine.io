{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <main class="max-w-5xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <span class="text-slate-300">Tags</span>
                </p>
                <h1 class="text-3xl font-semibold">Tags</h1>
            </div>
            <a href="{{ path('admin_tag_new') }}" class="btn btn-primary">Create</a>
        </div>

        {% if tags is empty %}
            <div class="card p-6 text-slate-300">No tags yet.</div>
        {% else %}
            <div class="overflow-hidden rounded-xl border border-slate-800 card">
                <table class="min-w-full divide-y divide-slate-800">
                    <thead class="bg-slate-900/60">
                        <tr class="text-left text-sm text-slate-400">
                            <th class="px-4 py-3">Code</th>
                            <th class="px-4 py-3">Label</th>
                            <th class="px-4 py-3">Category</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        {% for tag in tags %}
                            <tr class="hover:bg-slate-900/40">
                                <td class="px-4 py-3 font-mono text-sm">{{ tag.code }}</td>
                                <td class="px-4 py-3 font-semibold">{{ tag.label }}</td>
                                <td class="px-4 py-3">{{ tag.category.labelKey()|trans({}, 'tag') }}</td>
                                <td class="px-4 py-3 space-x-2">
                                    <a href="{{ path('admin_tag_show', { id: tag.id }) }}" class="btn btn-ghost text-sm">View</a>
                                    <a href="{{ path('admin_tag_edit', { id: tag.id }) }}" class="btn btn-ghost text-sm">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </main>
{% endblock %}
