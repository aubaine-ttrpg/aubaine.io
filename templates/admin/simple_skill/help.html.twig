{% extends 'base.html.twig' %}

{% block title %}{{ 'page.title'|trans({}, 'simple_skill_help') }}{% endblock %}

{% block body %}
    <main class="max-w-6xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <a href="{{ path('admin_simple_skill_index') }}" class="hover:text-sky-300">Simple Skills</a>
                    <span>/</span>
                    <span class="text-slate-300">{{ 'page.breadcrumb'|trans({}, 'simple_skill_help') }}</span>
                </p>
                <h1 class="text-3xl font-semibold">{{ 'page.title'|trans({}, 'simple_skill_help') }}</h1>
                <p class="text-slate-300 max-w-2xl">{{ 'page.subtitle'|trans({}, 'simple_skill_help') }}</p>
            </div>
            <a class="btn btn-ghost" href="{{ path('admin_simple_skill_index') }}">&larr; Back to list</a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-[200px_1fr] gap-6" data-controller="content-nav">
            {% include 'components/content_nav.html.twig' with { title: 'page.toc'|trans({}, 'simple_skill_help') } %}

            <article class="space-y-10" data-content-nav-target="content">
                <section class="space-y-6">
                    <h2 class="text-2xl font-semibold">{{ 'sections.understanding.title'|trans({}, 'simple_skill_help') }}</h2>

                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-slate-200">{{ 'sections.understanding.what_is.title'|trans({}, 'simple_skill_help') }}</h3>
                        <p class="text-slate-300">{{ 'sections.understanding.what_is.body'|trans({}, 'simple_skill_help') }}</p>
                    </div>

                    <div class="space-y-3">
                        <p class="text-slate-300">{{ 'sections.understanding.families.title'|trans({}, 'simple_skill_help') }}</p>
                        <ul class="list-disc pl-6 text-slate-300 space-y-2">
                            <li>{{ 'sections.understanding.families.unleashed'|trans({}, 'simple_skill_help') }}</li>
                            <li>{{ 'sections.understanding.families.specific'|trans({}, 'simple_skill_help') }}</li>
                        </ul>
                    </div>

                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-slate-200">{{ 'sections.understanding.resolution.title'|trans({}, 'simple_skill_help') }}</h3>
                        <p class="text-slate-300">{{ 'sections.understanding.resolution.body'|trans({}, 'simple_skill_help') }}</p>
                    </div>

                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-slate-200">{{ 'sections.understanding.attack.title'|trans({}, 'simple_skill_help') }}</h3>
                        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-3 text-sm text-slate-200 whitespace-pre-line">
                            {{ 'sections.understanding.attack.formula'|trans({}, 'simple_skill_help') }}
                        </div>
                    </div>

                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-slate-200">{{ 'sections.understanding.check.title'|trans({}, 'simple_skill_help') }}</h3>
                        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-3 text-sm text-slate-200 whitespace-pre-line">
                            {{ 'sections.understanding.check.formula'|trans({}, 'simple_skill_help') }}
                        </div>
                    </div>

                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-slate-200">{{ 'sections.understanding.saving.title'|trans({}, 'simple_skill_help') }}</h3>
                        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-3 text-sm text-slate-200 whitespace-pre-line">
                            {{ 'sections.understanding.saving.formula'|trans({}, 'simple_skill_help') }}
                        </div>
                        <p class="text-slate-300">{{ 'sections.understanding.saving.body'|trans({}, 'simple_skill_help') }}</p>
                    </div>

                    <div class="space-y-3">
                        <p class="text-slate-300">{{ 'sections.understanding.rule_of_thumb.title'|trans({}, 'simple_skill_help') }}</p>
                        <ul class="list-disc pl-6 text-slate-300 space-y-1">
                            <li>{{ 'sections.understanding.rule_of_thumb.attack'|trans({}, 'simple_skill_help') }}</li>
                            <li>{{ 'sections.understanding.rule_of_thumb.saving'|trans({}, 'simple_skill_help') }}</li>
                        </ul>
                    </div>
                </section>
            </article>
        </div>
    </main>
{% endblock %}
