{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <main class="max-w-6xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <span class="text-slate-300">Skills</span>
                </p>
                <h1 class="text-3xl font-semibold">Skills</h1>
            </div>
            <div class="flex gap-2">
                <a href="{{ path('admin_skill_export') }}" class="btn btn-ghost">Export</a>
                <a href="{{ path('admin_skill_factory') }}" class="btn btn-primary">Create</a>
            </div>
        </div>

        {% if skills is empty %}
            <div class="card p-6 text-slate-300">No skills yet.</div>
        {% else %}
            <div class="overflow-hidden rounded-xl border border-slate-800 card">
                <table class="min-w-full divide-y divide-slate-800">
                    <thead class="bg-slate-900/60">
                        <tr class="text-left text-sm text-slate-400">
                            <th class="px-4 py-3">Icon</th>
                            <th class="px-4 py-3">Code</th>
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Ultimate</th>
                            <th class="px-4 py-3">Category</th>
                            <th class="px-4 py-3">Type</th>
                            <th class="px-4 py-3">Energy</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        {% for skill in skills %}
                            <tr class="hover:bg-slate-900/40">
                                <td class="px-4 py-3">
                                    {% set iconPath = skill.icon ?? null %}
                                    <div class="rounded-2xl overflow-hidden border border-slate-800 bg-slate-900 w-[75px] h-[75px] shadow-lg">
                                        <img src="{{ iconPath ?: 'https://placehold.co/75?text=?' }}" alt="" class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://placehold.co/75?text=?';">
                                    </div>
                                </td>
                                <td class="px-4 py-3 font-mono text-sm">{{ skill.code }}</td>
                                <td class="px-4 py-3 font-semibold">{{ skill.name }}</td>
                                <td class="px-4 py-3">{{ skill.isUltimate ? 'Yes' : 'No' }}</td>
                                <td class="px-4 py-3">{{ ('skill.category.' ~ skill.category.value)|trans({}, 'skills') }}</td>
                                <td class="px-4 py-3">{{ ('skill.type.' ~ skill.type.value)|trans({}, 'skills') }}</td>
                                <td class="px-4 py-3">{{ skill.energyCost }}</td>
                                <td class="px-4 py-3 space-x-2">
                                    <a href="{{ path('admin_skill_show', { id: skill.id }) }}" class="btn btn-ghost text-sm">View</a>
                                    <a href="{{ path('admin_skill_edit', { id: skill.id }) }}" class="btn btn-ghost text-sm">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </main>
{% endblock %}
