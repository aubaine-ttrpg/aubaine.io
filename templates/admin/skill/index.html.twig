{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <main class="max-w-6xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <span class="text-slate-300">Skills</span>
                </p>
                <h1 class="text-3xl font-semibold">Skills</h1>
            </div>
            <div class="flex gap-2">
                <a href="{{ path('admin_skill_help') }}" class="btn btn-ghost">{{ 'page.title'|trans({}, 'simple_skill_help') }}</a>
                <a href="{{ path('admin_skill_export') }}" class="btn btn-ghost">Export</a>
                <a href="{{ path('admin_skill_factory') }}" class="btn btn-primary">Create</a>
            </div>
        </div>

        {% if skills is empty %}
            <div class="card p-6 text-slate-300">No skills yet.</div>
        {% else %}
            {% set categories = [] %}
            {% for skill in skills %}
                {% set cat = skill.category %}
                {% if cat != enum('App\\Enum\\SkillCategory').NONE and cat.value not in categories %}
                    {% set categories = categories|merge([cat.value]) %}
                {% endif %}
            {% endfor %}

            {% if categories is not empty %}
                <div class="flex flex-wrap gap-2">
                    <button type="button" class="px-3 py-1 rounded-full border border-slate-800 text-xs uppercase tracking-wide bg-white text-slate-900" data-skill-category="__all">
                        All
                    </button>
                    {% for category in categories %}
                        <button type="button" class="px-3 py-1 rounded-full border border-slate-800 text-xs uppercase tracking-wide bg-white text-slate-900" data-skill-category="{{ category }}">
                            {{ ('skill.category.' ~ category)|trans({}, 'skills') }}
                        </button>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="overflow-hidden rounded-xl border border-slate-800 card">
                <table class="min-w-full divide-y divide-slate-800">
                    <thead class="bg-slate-900/60">
                        <tr class="text-left text-sm text-slate-400">
                            <th class="px-4 py-3">Icon</th>
                            <th class="px-4 py-3">Code</th>
                            <th class="px-4 py-3">Name</th>
                            <th class="px-4 py-3">Energy</th>
                            <th class="px-4 py-3">Timing</th>
                            <th class="px-4 py-3">Range</th>
                            <th class="px-4 py-3">Duration</th>
                            <th class="px-4 py-3">Tags</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        {% for skill in skills %}
                            <tr class="hover:bg-slate-900/40" data-category="{{ skill.category.value }}">
                                <td class="px-4 py-3">
                                    {% set iconPath = skill.icon ?? null %}
                                    <div class="rounded-2xl overflow-hidden border border-slate-800 bg-slate-900 w-[75px] h-[75px] shadow-lg">
                                        <img src="{{ iconPath ?: 'https://placehold.co/75?text=?' }}" alt="" class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://placehold.co/75?text=?';">
                                    </div>
                                </td>
                                <td class="px-4 py-3 font-mono text-sm">{{ skill.code }}</td>
                                <td class="px-4 py-3 font-semibold">{{ skill.name }}</td>
                                <td class="px-4 py-3">{{ skill.energy ?: '-' }}</td>
                                <td class="px-4 py-3">{{ skill.timing ?: '-' }}</td>
                                <td class="px-4 py-3">{{ skill.range ?: '-' }}</td>
                                <td class="px-4 py-3">{{ skill.duration ?: '-' }}</td>
                                <td class="px-4 py-3">{{ skill.tags ?: '-' }}</td>
                                <td class="px-4 py-3 space-x-2">
                                    <a href="{{ path('admin_skill_show', { id: skill.id }) }}" class="btn btn-ghost text-sm">View</a>
                                    <a href="{{ path('admin_skill_edit', { id: skill.id }) }}" class="btn btn-ghost text-sm">Edit</a>
                                    <a href="{{ path('admin_skill_clone', { id: skill.id }) }}" class="btn btn-ghost text-sm">Clone</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% if categories is not empty %}
                <script>
                    (function () {
                        const badges = Array.from(document.querySelectorAll('[data-skill-category]'));
                        const rows = Array.from(document.querySelectorAll('tbody [data-category]'));
                        if (!badges.length || !rows.length) {
                            return;
                        }

                        const setActive = (btn) => {
                            badges.forEach((badge) => {
                                badge.classList.remove('bg-slate-900', 'text-white');
                                badge.classList.add('bg-white', 'text-slate-900');
                            });
                            if (btn) {
                                btn.classList.add('bg-slate-900', 'text-white');
                                btn.classList.remove('bg-white', 'text-slate-900');
                            }
                        };

                        const applyFilter = (category) => {
                            rows.forEach((row) => {
                                const match = !category || row.dataset.category === category;
                                row.style.display = match ? '' : 'none';
                            });
                        };

                        badges.forEach((badge) => {
                            badge.addEventListener('click', () => {
                                const category = badge.dataset.skillCategory;
                                const isActive = badge.classList.contains('bg-slate-900');

                                if (category === '__all' || isActive) {
                                    setActive(null);
                                    applyFilter(null);
                                    return;
                                }

                                setActive(badge);
                                applyFilter(category);
                            });
                        });
                    })();
                </script>
            {% endif %}
        {% endif %}
    </main>
{% endblock %}
