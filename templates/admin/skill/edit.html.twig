{% extends 'base.html.twig' %}

{% block title %}Edit Skill: {{ skill.name }}{% endblock %}

{% block body %}
    <main class="max-w-6xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <a href="{{ path('admin_skill_index') }}" class="hover:text-sky-300">Skills</a>
                    <span>/</span>
                    <span class="text-slate-300">Edit</span>
                </p>
                <h1 class="text-3xl font-semibold">Edit {{ skill.name }}</h1>
            </div>
            <a class="btn btn-ghost" href="{{ path('admin_skill_show', { id: skill.id }) }}">‚Üê Back to detail</a>
        </div>

        {% include 'admin/skill/_form.html.twig' with {
            form: form,
            iconSrc: skill.icon,
            submit_label: 'Save'
        } %}
    </main>
{% endblock %}
