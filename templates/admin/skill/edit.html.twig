{% extends 'base.html.twig' %}

{% block title %}Edit Skill: {{ skill.name }}{% endblock %}

{% block body %}
    <main class="container" style="max-width: 960px; margin: 2rem auto; padding: 1rem;">
        <p style="margin: 0 0 1rem;">
            <a href="{{ path('admin_skill_show', { id: skill.id }) }}" style="text-decoration: none; color: #4c6fff;">‚Üê Back to detail</a>
        </p>

        <div style="display: flex; align-items: center; gap: 1rem;">
            {% set iconPath = skill.icon ?? null %}
            {% if iconPath %}
                <img src="{{ iconPath }}" alt="" style="width: 75px; height: 75px; object-fit: cover;">
            {% else %}
                <div style="width: 75px; height: 75px; background: #f0f0f0; border: 1px dashed #ccc; display: flex; align-items: center; justify-content: center; color: #999;">No image</div>
            {% endif %}
            <h1 style="margin: 0;">Edit {{ skill.name }}</h1>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }}" style="margin: .5rem 0; padding: .5rem 1rem; background: #f0f4ff; border-left: 4px solid #4c6fff;">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit">Save</button>
        {{ form_end(form) }}
    </main>
{% endblock %}
