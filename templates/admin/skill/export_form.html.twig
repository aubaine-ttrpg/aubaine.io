{% extends 'base.html.twig' %}

{% block title %}Export Skills{% endblock %}

{% block body %}
    <main class="max-w-4xl mx-auto px-4 py-8 space-y-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-400 space-x-1">
                    <a href="{{ path('admin_home') }}" class="hover:text-sky-300">Admin</a>
                    <span>/</span>
                    <a href="{{ path('admin_skill_index') }}" class="hover:text-sky-300">Skills</a>
                    <span>/</span>
                    <span class="text-slate-300">Export</span>
                </p>
                <h1 class="text-3xl font-semibold">Export Skills</h1>
            </div>
            <a class="btn btn-ghost" href="{{ path('admin_skill_index') }}">‚Üê Back to list</a>
        </div>

        <div class="card p-6 space-y-4">
            {{ form_start(form, { attr: { class: 'grid grid-cols-1 md:grid-cols-2 gap-4 items-end', 'data-skill-form': '' } }) }}
                <div>
                    <label class="label">Categories</label>
                    {{ form_widget(form.category, { attr: { class: 'input', 'data-controller': 'multi-select' } }) }}
                </div>
                <div>
                    <label class="label">Abilities</label>
                    {{ form_widget(form.ability, { attr: { class: 'input', 'data-controller': 'multi-select' } }) }}
                </div>
                <div>
                    <label class="label">Aptitudes</label>
                    {{ form_widget(form.aptitude, { attr: { class: 'input', 'data-controller': 'multi-select' } }) }}
                </div>
                <div>
                    <label class="label">Language</label>
                    {{ form_widget(form.locale, { attr: { class: 'input' } }) }}
                </div>
                <div class="md:col-span-2">
                    <label class="label">Export name</label>
                    {{ form_widget(form.exportName, { attr: { class: 'input' } }) }}
                </div>
                <div>
                    <label class="label">Sort by</label>
                    {{ form_widget(form.sortBy, { attr: { class: 'input' } }) }}
                </div>
                <div>
                    <label class="label">Order</label>
                    {{ form_widget(form.sortOrder, { attr: { class: 'input' } }) }}
                </div>
                <div class="md:col-span-2 flex flex-wrap gap-6">
                    <label class="inline-flex items-center gap-2 text-sm text-slate-300" for="{{ form.ultimate.vars.id }}">
                        {{ form_widget(form.ultimate) }}
                        <span>Ultimate only</span>
                    </label>
                    <label class="inline-flex items-center gap-2 text-sm text-slate-300" for="{{ form.displayCode.vars.id }}">
                        {{ form_widget(form.displayCode) }}
                        <span>Display code</span>
                    </label>
                </div>
                <div class="md:col-span-2 flex justify-end">
                    <button class="btn btn-primary" type="submit">Generate</button>
                </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
