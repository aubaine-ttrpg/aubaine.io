<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/ico" href="/favicon.ico">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body class="min-h-screen text-zinc-100 bg-gradient-to-b from-[#0b0b0f] via-[#0a0a0b] to-black">
        <div aria-hidden class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
            <div class="absolute -left-1/2 top-[-10%] h-[70vh] w-[140vw] rotate-[8deg] bg-[radial-gradient(ellipse_at_center,rgba(57,8,234,0.075),transparent_60%)]"></div>
            <div class="absolute -right-1/3 top-[20%] h-[60vh] w-[80vw] bg-[radial-gradient(ellipse_at_center,rgba(63,210,244,0.075),transparent_60%)]"></div>
            <div class="absolute left-1/2 -translate-x-1/2 bottom-[-10%] h-[60vh] w-[120vw] bg-[radial-gradient(ellipse_at_center,rgba(59,130,246,0.05),transparent_60%)]"></div>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
