<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/ico" href="/favicon.ico">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body class="min-h-screen text-zinc-100 bg-gradient-to-b from-[#0b0b0f] via-[#0a0a0b] to-black">
        <twig:Layout:Backdrop />
        {% block body %}{% endblock %}
    </body>
</html>
